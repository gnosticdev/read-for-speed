		"@read-for-speed/ui": "workspace:*",
		"class-variance-authority": "catalog:",
		"clsx": "catalog:",
		"lucide-react": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"tailwind-merge": "catalog:",
		"tailwindcss": "catalog:",
		"tw-animate-css": "catalog:",
		"usehooks-ts": "^3.1.1"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@biomejs/biome": "catalog:",
		"typescript": "catalog:"
	}
