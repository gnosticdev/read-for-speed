	"description": "Speed reader component for the Read for Speed extension and speed reader app",
	"private": true,
	"scripts": {
		"clean": "rm -rf node_modules dist",
		"clean-install": "bun run clean && bun i --no-cache",
		"lint": "biome check .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit"
	},
	"engines": {
		"node": ">=24.11.0"
	},
	"exports": {
