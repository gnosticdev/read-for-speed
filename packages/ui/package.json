{
	"name": "@read-for-speed/ui",
	"description": "Shared utilities for the Read for Speed extension and speed reader app",
	"version": "0.0.0",
	"type": "module",
	"private": true,
	"scripts": {
		"clean": "rm -rf node_modules dist",
		"clean-install": "bun run clean && bun i --no-cache",
		"lint": "biome check .",
		"format": "biome format --write ."
	},
	"engines": {
		"node": ">=24.11.0"
	},
	"exports": {
		"./components/*": "./src/components/*.tsx",
		"./utils": "./src/lib/utils.ts",
		"./theme.css": "./src/theme.css"
	},
	"dependencies": {
		"@base-ui/react": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"tailwind-merge": "catalog:",
		"clsx": "catalog:",
		"class-variance-authority": "catalog:",
		"lucide-react": "catalog:",
		"tailwindcss": "catalog:",
		"tw-animate-css": "catalog:"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"@types/react": "catalog:",
		"@types/react-dom": "catalog:",
		"@biomejs/biome": "catalog:",
		"typescript": "catalog:"
	}
}
